<config>
    <modules>
        <Magemaven_Lesscss>
            <version>1.0.1.0</version>
        </Magemaven_Lesscss>
    </modules>
    <global>
        <models>
            <lesscss>
                <class>Magemaven_Lesscss_Model</class>
            </lesscss>
            <core>
                <rewrite>
                    <design_package>Magemaven_Lesscss_Model_Design_Package</design_package>
                </rewrite>
            </core>
        </models>
        <helpers>
            <lesscss>
                <class>Magemaven_Lesscss_Helper</class>
            </lesscss>
        </helpers>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <lesscss translate="title" module="lesscss">
                                            <title>Magemaven - Lesscss</title>
                                        </lesscss>
                                    </children>
                                </config>
                            </children>
                        </system>
                   </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
